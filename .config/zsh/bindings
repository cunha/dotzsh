# We do not use any bindings starting with meta (ESC).
# Unbind them so we do not have to wait for zsh ESC-chaining.
# KEYTIMEOUT=1

WORDCHARS='*?_-.[]~=&;!#$%^(){}<>'

bindkey -M emacs '^H' backward-delete-word
if [[ "$TERM" == "rxvt-unicode" ]] ; then
    bindkey -M emacs '^[Oc' forward-word
    bindkey -M emacs '^[Od' backward-word
    bindkey -M emacs '^[[3^' kill-word
else
    bindkey -M emacs '^[[1;5D' backward-word
    bindkey -M emacs '^[[1;5C' forward-word
    bindkey -M emacs '^[[3;5~' kill-word
fi

# temporary
bindkey -M emacs '^w' beep

